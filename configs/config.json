{
    "experiment_name": "typhoon_tempogan_v1",
    "paths": {
        "data_root": "./data/digital_typhoon",
        "flow_root": "./outputs/flow",
        "json_path": "./triplets.json",
        "checkpoint_dir": "./checkpoints",
        "log_dir": "./logs",
        "sample_dir": "./samples"
    },
    "training": {
        "batch_size": 4,
        "num_epochs": 50,
        "num_workers": 4,
        "learning_rate": {
            "g": 2e-4,
            "d": 2e-4
        },
        "betas": [0.5, 0.999],
        "save_interval": 5000,
        "eval_interval": 1000,
        "log_interval": 100
    },
    "loss_weights": {
        "lambda_l1": 5.0,
        "lambda_feat": 10.0,
        "lambda_adv": 1.0
    },
    "model": {
        "scale_factor": 4,
        "in_channels": 3 
    }
}