{
    "experiment_name": "typhoon_phygan_final",
    "paths": {
        "data_root": "./data/digital_typhoon",
        "json_path": "./data/outputs.json",
        "checkpoint_dir": "./checkpoints/phygan_final*4*",
        "log_dir": "./logs/phygan_final*4",
        "sample_dir": "./samples/phygan_final*4"
    },
    "training": {
        "batch_size": 4,
        "num_epochs": 15,
        "num_workers": 4,
        "learning_rate": {
            "g": 5e-5,
            "d": 2e-4
        },
        "betas": [0.5, 0.999],
        "save_interval": 500,
        "eval_interval": 250,
        "log_interval": 100
    },
    "loss_weights": {
        "lambda_l1": 5.0,
        "lambda_feat": 2.5,
        "lambda_adv": 1.0
    },
    "model": {
        "scale_factor": 4,
        "in_channels": 1,
        "base_channels": 64
    }
}